    kconfig \
    kconfig-native \
    kconfigwidgets \
    kcoreaddons-native \
    ki18n \
    kio \
    knotifications \
    kwidgetsaddons \
    \
    libxcb \
    libxcursor \
"

PV = "${PLASMA_VERSION}"
SRC_URI[md5sum] = "3a231b46255d541d3ed2bc36f7d62516"
SRC_URI[sha256sum] = "e2d95919ea223771c162ffce19b191fef55c0f5a1016d0029293969b8ecaa748"

