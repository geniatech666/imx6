diff --git a/Makefile b/Makefile
index b652a8b..d2fe67f 100644
--- a/Makefile
+++ b/Makefile
@@ -18,17 +18,6 @@ ifdef DPKG
 	PDEBLDFLAGS := $(shell dpkg-buildflags --get LDFLAGS)
 endif
 
