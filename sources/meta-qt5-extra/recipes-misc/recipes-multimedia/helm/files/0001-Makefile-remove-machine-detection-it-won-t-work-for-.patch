-ifneq (,$(findstring aarch,$(MACHINE)))
-	SIMDFLAGS := -march=armv8-a -mtune=cortex-a53
-else
-ifneq (,$(findstring arm,$(MACHINE)))
-	SIMDFLAGS := -march=armv8-a -mtune=cortex-a53 -mfpu=neon-fp-armv8 -mfloat-abi=hard
-else
-	SIMDFLAGS := -msse2
-endif
-endif
